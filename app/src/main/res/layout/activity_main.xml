<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:scrollbars="none"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="vertical">

        <!--  HotFix/Plugin by Hook  !!!!!!!!!!!!!!! -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="HotFix/Plugin by Hook  !!!!!!!!!!!!!!!"
            android:textColor="@color/purple_700"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="\n hook startActivity\n by mInstrument in ActivityThread \n API smaller than Android P"
            android:textSize="16sp" />

        <Button
            android:id="@+id/bt_hook_start_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hook Activity.ActivityStart"
            android:textAllCaps="false"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/bt_hook_start_context"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hook ContextImpl.StartActivity"
            android:textAllCaps="false"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/bt_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Activity.StartActivity"
            android:textAllCaps="false"
            tools:ignore="MissingConstraints" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="\n hook iBinder \n by serviceManager \n API smaller than Android P"
            android:textSize="16sp" />

        <Button
            android:id="@+id/bt_binder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HookBinder"
            android:textAllCaps="false"
            tools:ignore="MissingConstraints" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="\n merge dexElement \n need before class be used \n API smaller than Android P"
            android:textSize="16sp" />

        <Button
            android:id="@+id/bt_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View.onClick"
            android:textAllCaps="false"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/bt_method"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reflect setOnclick"
            android:textAllCaps="false"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/bt_inject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Merge DexElement"
            android:textAllCaps="false"
            tools:ignore="MissingConstraints" />

        <!--  HotFix/Plugin by ART  !!!!!!!!!!!!!!! -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="end"
            android:text="HotFix/Plugin with no hook  模仿腾讯Shadow"
            android:textColor="@color/purple_700"
            android:textSize="16sp" />

        <Button
            android:id="@+id/bt_start_activity_no_hook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="plugin.startActivity"
            android:textAllCaps="false"
            tools:ignore="MissingConstraints" />

        <!--  HotFix/Plugin by ART  !!!!!!!!!!!!!!! -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="end"
            android:text="HotFix/Plugin by ART  !!!!!!!!!!!!!!!"
            android:textColor="@color/purple_700"
            android:textSize="16sp" />
