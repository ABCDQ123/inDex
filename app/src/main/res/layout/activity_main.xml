<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/bt_inject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:text="DexElement"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/bt_method"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:text="Reflect"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/bt_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:text="Click"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/bt_hook_start_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hook Act"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/bt_hook_start_context"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Hook Context"
        tools:ignore="MissingConstraints" />


    <Button
        android:id="@+id/bt_tart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="Start"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="类对象生成前 Dex写入DexElement才能生效"
        android:textSize="16sp" />

</RelativeLayout>